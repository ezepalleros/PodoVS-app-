<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#2B2B2F">

    <!-- Contenedor del BottomSheet -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Handle + cerrar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_width="56dp"
                android:layout_height="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/white"
                android:alpha="0.25" />

            <ImageButton
                android:id="@+id/btnCloseSheet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivAvatarLarge"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_avatar"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp" />

        <!-- Nombre + Nivel/XP (card oscura) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#32333A"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingEnd="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nivel 1"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <ProgressBar
                        android:id="@+id/pbXp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:max="100"
                        android:progress="40"
                        android:progressTint="#6FE6B7"
                        android:background="#14000000" />

                    <TextView
                        android:id="@+id/tvXpHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40 / 100 XP"
                        android:textSize="12sp"
                        android:textColor="#C7CAD1" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjetas de estadísticas configurables -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp">

            <!-- Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#32333A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvStat1Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Km recorridos"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <ImageButton
                            android:id="@+id/btnEdit1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@android:color/transparent"
                            android:src="@android:drawable/ic_menu_edit" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStat1Value"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="00"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#32333A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvStat2Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Carreras ganadas"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <ImageButton
                            android:id="@+id/btnEdit2"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@android:color/transparent"
                            android:src="@android:drawable/ic_menu_edit" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStat2Value"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="00"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Hitos / Próximamente -->

    </LinearLayout>
</ScrollView>
