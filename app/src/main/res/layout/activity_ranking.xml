<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="108dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Título principal -->
            <TextView
                android:id="@+id/tvRankingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rankings"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <!-- Subtítulo general -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mirá tu tabla semanal y el top global de caminadores."
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="4dp"/>

            <!-- ======================= ZONA RANKING SEMANAL ======================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeeklyZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FEE2E2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Título + timer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvWeeklyTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tu tabla semanal"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#B91C1C"/>

                    </LinearLayout>

                    <!-- Encabezado tipo tabla -->
                    <TextView
                        android:id="@+id/tvWeeklySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="Cargando..."
                        android:textColor="#7F1D1D"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#7F1D1D"
                            android:paddingEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jugador"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#7F1D1D"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semana"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#7F1D1D"
                            android:paddingEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Premio"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#7F1D1D"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#FCA5A5"/>

                    <LinearLayout
                        android:id="@+id/containerWeeklyRanking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ======================= ZONA RANKING GLOBAL ======================= -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGlobalZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#FEF3C7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Título global -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top 5 global (km totales)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#92400E"/>

                    <!-- Encabezado tipo tabla -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#92400E"
                            android:paddingEnd="8dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jugador"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#92400E"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Km totales"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#92400E"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#FBBF24"/>

                    <LinearLayout
                        android:id="@+id/containerGlobalRanking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="6dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- ======================= BOTTOM BAR ======================= -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_main"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnShop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_shop"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnVs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_versus"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnEvents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_events"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnLeaderboards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_leaderboards"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
