<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <!-- Card centrada (misma estética que login/profile) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAvatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#2B2B2F"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vestir avatar"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Preview en estilo card oscuro -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#32333A"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/ivPreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/app_name"
                    android:padding="12dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Separador sutil -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#14000000"/>

            <!-- Barra de categorías (botones Material oscuros) -->
            <LinearLayout
                android:id="@+id/rowCats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatPiel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Piel"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#3A3B42"/>

                <Space android:layout_width="6dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatCabeza"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Cabeza"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#3A3B42"/>

                <Space android:layout_width="6dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatRemera"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Remera"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#3A3B42"/>

                <Space android:layout_width="6dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatPantalon"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Pantalón"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#3A3B42"/>

                <Space android:layout_width="6dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCatZapas"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Zapas"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#3A3B42"/>
            </LinearLayout>

            <!-- Grilla dentro de card oscura -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardBackgroundColor="#32333A"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Acciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="#C7CAD1"
                    app:backgroundTint="#3A3B42"
                    app:cornerRadius="12dp"/>

                <Space android:layout_width="10dp" android:layout_height="0dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar"
                    android:textAllCaps="false"
                    android:textColor="#1E1F22"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
