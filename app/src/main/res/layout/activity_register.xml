<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#2B2B2F"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvRegisterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear cuenta"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:hint="Nombre"
                android:textColor="@android:color/white"
                android:textColorHint="#C7CAD1"
                android:background="@android:color/transparent"
                android:paddingHorizontal="14dp"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white"
                android:textColorHint="#C7CAD1"
                android:background="@android:color/transparent"
                android:paddingHorizontal="14dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#C7CAD1"
                android:background="@android:color/transparent"
                android:paddingHorizontal="14dp"/>

            <!-- Dificultad -->
            <TextView
                android:id="@+id/tvDifLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Dificultad"
                android:textColor="#C7CAD1"/>

            <Spinner
                android:id="@+id/spDificultad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle">

                <!-- fila resumen actual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/dotSelected"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="#6FE6B7"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/tvDifTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F치cil (verde)"
                        android:textStyle="bold"
                        android:textColor="#6FE6B7"/>
                </LinearLayout>

                <!-- explicaci칩n din치mica -->
                <TextView
                    android:id="@+id/tvDifDetalles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#C7CAD1"
                    android:text="-"
                    android:lineSpacingExtra="2dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCrearCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Crear cuenta"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:backgroundTint="@android:color/white"
                android:textColor="#1E1F22"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
