<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- header disponible -->
            <TextView
                android:id="@+id/tvVsAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Versus disponibles:"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- barra visual de energía (versus disponibles) -->
            <LinearLayout
                android:id="@+id/llEnergyBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/ivEnergy1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/energy_empty" />

                <ImageView
                    android:id="@+id/ivEnergy2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/energy_empty" />

                <ImageView
                    android:id="@+id/ivEnergy3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/energy_empty" />
            </LinearLayout>

            <!-- CARD: Versus en progreso -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#EEF2FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Versus en progreso"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:paddingBottom="4dp"/>

                    <LinearLayout
                        android:id="@+id/containerActive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD: Salas disponibles -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#ECFDF5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salas públicas y privadas disponibles"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:paddingBottom="4dp"/>

                    <LinearLayout
                        android:id="@+id/containerRooms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón crear sala lindo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateRoom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Crear sala"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                app:icon="@drawable/energy_charged"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="#4F46E5" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_main"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnShop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_shop"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnVs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_versus"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnEvents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_events"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:id="@+id/btnLeaderboards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_leaderboards"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
