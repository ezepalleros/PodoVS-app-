<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fitsSystemWindows="true">

    <!-- TOP: botones circulares centrados -->
    <LinearLayout
        android:id="@+id/topRow"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTopGoals"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:rippleColor="?attr/colorControlHighlight"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/button_goals"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTopStats"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:rippleColor="?attr/colorControlHighlight"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/button_stats"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTopProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:rippleColor="?attr/colorControlHighlight"
            app:cardCornerRadius="28dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/button_profile"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTopNotifications"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:rippleColor="?attr/colorControlHighlight"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/button_notifications"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnTopOptions"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:rippleColor="?attr/colorControlHighlight"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/button_options"
                android:contentDescription="@string/app_name"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Título + número grande (PASOS HOY) -->
    <TextView
        android:id="@+id/tvTituloKm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PASOS HOY"
        android:textStyle="bold"
        android:textSize="20sp"
        android:letterSpacing="0.05"
        android:textColor="#30343A"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/topRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvKmTotalBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        android:textSize="34sp"
        android:textColor="#1E1F22"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTituloKm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- MONEDAS (arriba del avatar) -->
    <LinearLayout
        android:id="@+id/rowCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvKmTotalBig"
        app:layout_constraintBottom_toTopOf="@id/ivAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp">

        <ImageView
            android:id="@+id/ivCoin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/my_coins"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#30343A"
            android:text="0" />
    </LinearLayout>

    <!-- Avatar más grande -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="280dp"
        android:layout_height="340dp"
        android:src="@drawable/default_avatar"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/rowCoins"
        app:layout_constraintBottom_toTopOf="@id/rowSemanaPasos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Abajo: solo KM semana (izquierda) -->
    <LinearLayout
        android:id="@+id/rowSemanaPasos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvKmSemanaSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semana: 0.00 km"
            android:textSize="16sp"
            android:textColor="#3A3F45"/>
    </LinearLayout>

    <!-- Bottom nav (sin cambios funcionales) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_main"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/btnShop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_shop"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/btnVs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_versus"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/btnEvents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_events"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/btnLeaderboards"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/button_leaderboards"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
